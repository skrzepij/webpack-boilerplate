//- Page index.pug
extends ../layout

block vars
  - var title = "Strona główna"
  - var pageTitle = "Homepage"
  - var pageDesc = "Opis strony głównej"

block append header
  - locals.path= pageTitle;
  include ../includes/header



block append content
  h1(class="header-h1" data-attr="tested data").
    Pug - node template engine 
    #[i(class="fa fa-address-book" aria-hidden="true")]
    #[img(src=require("../../img/smile.svg") style="width: 250px;")]
  .container
    .row
      - var cols = 0;
      while cols < 4
        .col-sm-3
          p.
            Przykładowa kolumna #{ cols + 1 }
        - cols++;
      
  .container
    form
      .form-group
        input(placeholder="test" type="number").form-control

  #container.container.col
    //- include values from external JSON
    - var values = (require('../../data/example.json'));
    ul
      each val, key in values
        li= values[key].name
          a(href="http://google.pl")  LINK
        
    //--- END of including data;
    
    
    p.
      Get ON!
      




  
    <!-- Button trigger modal -->
    button.btn.btn-warning.btn-lg(type="button" data-toggle="modal" data-target="#myModal").
      Odpal modal

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
